<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Dallmann Asset-Management</title>
    <link rel="stylesheet" href="css/userManagement.css">
    <link rel="stylesheet" href="css/headFootDesign.css">
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="icon" type="image/x-icon"
          href="https://www.dallmann-bau.de/fileadmin/template/favicon.png">
    <link rel="stylesheet" href="css/table.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
          rel="stylesheet">
    <script src="http://code.jquery.com/jquery-3.1.0.min.js"></script>


    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="javascript/userManagement.js"></script>

    <title>Benutzerverwaltung</title>
</head>
<body>
<!-- NavigationBar Start -->
<%- include('../Views/general/header.ejs'); -%>
<!--Nav Ende -->
<!-- TODO den hiddeninput zu session ergänzen -->
<br>
<div class="outerBox">
    <div class="wrapper">
        <div id="userContent">
            <h3>Benutzerliste</h3>
            <div class="newUserWrapper">
                <% if (rights.add_user === 1){ %>
                    <form method="get" id="add" onclick="addUserPopUp()">
                        <button id="submit" class="btn btn-outline-primary">
                            Neuen
                            Benutzer hinzufügen
                            <svg width="1em" height="1em" viewBox="0 0 16 16"
                                 class="glyphicon glyphicon-pencil"
                                 fill="currentColor"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                      d="M11 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM1.022 13h9.956a.274.274 0 0 0 .014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 0 0 .022.004zm9.974.056v-.002.002zM6 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm4.5 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                                <path fill-rule="evenodd"
                                      d="M13 7.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z"/>
                            </svg>
                        </button>
                    </form>
                <% } %>
            </div>
            <table id="userlist" width="100%" class="table user-list" onload>
                <thead>
                <tr>
                    <th>ID</th>
                    <th onclick="sortTable(0)">Vorname</th>
                    <th onclick="sortTable(1)">Nachname</th>
                    <th onclick="sortTable(2)">E-Mail</th>
                    <th onclick="sortTable(3)">Rolle</th>

                </tr>
                </thead>
                <tbody id="userListContent">
                <% for (var i = 0;i < data.length;i++){ %>
                    <tr onclick="loadData(<%= i %>); loadDataForBox(<%= i %>)">
                        <td id="tr<%= i %>td5"><%= data[i].workerId %></td>
                        <td id="tr<%= i %>td1"><%= data[i].firstname %></td>
                        <td id="tr<%= i %>td2"><%= data[i].surname %></td>
                        <td id="tr<%= i %>td3"><%= data[i].eMail %></td>
                        <td id="tr<%= i %>td4"><%= data[i].role %></td>

                    </tr>
                <% } %>
                </tbody>
            </table>

        </div>
        <div id="userInformation">

            <div class="box">
                <h3>Benutzerinfomationen</h3>
                <br>
                <div class="inputWrapper">
                    <form method="post" action="/updateUser">
                        <input type="hidden" name="workerid"
                               id="hiddenWorkerId">


                        <div class="userProfilBoxes">
                            <label for="Vorname" style="float: left">
                                Vorname: </label>
                            <div>
                                <input name="firstName" class="form-control"
                                       type="text" value="Vorname"
                                       id="firstName">
                            </div>
                        </div>

                        <div class="userProfilBoxes">
                            <label for="nachname"> Nachname: </label>
                            <div>
                                <input name="surname" class="form-control"
                                       type="text" value="Nachname"
                                       id="lastName">
                            </div>
                        </div>

                        <div class="userProfilBoxes">
                            <label for="e-Mail">E-Mail:</label>
                            <div>
                                <input name="eMail" class="form-control" type="text"
                                       value="E-Mail" id="e-Mail">
                            </div>
                        </div>

                        <div class="userProfilBoxes">
                            <label for="rolleBtn"> Rolle:</label>
                            <div>

                                <select name="role"
                                        class="form-control" id="rolle">
                                    <option disabled selected>Rolle</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Werkstatt">Werkstatt</option>
                                    <option value="Polier">Polier</option>
                                    <option value="Buchhaltung">Buchhaltung
                                    </option>
                                </select>
                            </div>
                        </div>


                        <div style="margin-top: 1em">
                            <% if (rights.edit_user === 1){ %>
                                <button type="submit"
                                        class="btn btn-outline-primary"
                                        onclick="sendData()">
                                    Bestätigen
                                </button>
                            <% } %>
                        </div>
                    </form>
                </div>
            </div>
            <hr>
            <br>
            <div>
                <h2>Passwort zurücksetzen</h2>
                <div>Hier können Sie das Passwort des User's zurücksetzen
                </div>
                <div style="margin-top: 1em">
                    <form method="post" action="/resetPw" id="resetPW">
                        <input type="hidden" name="e_Mail" id="reset_Password">
                        <button type="submit" class="btn btn-outline-danger"
                                onclick="resetUserPasswordMessage()">
                            Passwort zurücksetzen
                        </button>
                    </form>
                </div>
            </div>
            <hr>
            <br>
            <div>
                <h2>Benutzer löschen</h2>
                <div>Hier können Sie den gewählten User löschen
                </div>
                <div style="margin-top: 1em">
                    <form method="post" action="/deleteU" id="deleteUser">
                        <input type="hidden" name="workerid"
                               id="deleteHiddenWorkerId">
                        <button type="submit" form="deleteUser"
                                class="btn btn-outline-danger">
                            Benutzer löschen
                        </button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>
</div>
<%- include('../Views/general/footer.ejs'); -%>
<script src="javascript/adminView.js"></script>
</body>
</html>