<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html">
    <link rel="stylesheet" href="css/userManagement.css">

    <link rel="stylesheet" href="css/headFootDesign.css">
    <link rel="stylesheet" href="css/table.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="javascript/userManagement.js"></script>
    <script src="javascript/devicemanagement.js"></script>
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"></script>
    <link rel="stylesheet"
          href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"/>
    <link rel="icon" type="image/x-icon"
          href="https://www.dallmann-bau.de/fileadmin/template/favicon.png">

    <title>Geräteverwaltung</title>

    <!-- TODO den hiddeninput zu session ergänzen -->
</head>
<body>
<!-- NavigationBar Start -->
<%- include('../Views/general/header.ejs'); -%>
<!--Nav Ende -->

<br>
<div class="outerBox">
    <div class="wrapper">
        <div id="content" style="overflow-x: auto">
            <h3>Geräteliste</h3>
            <div style="text-align: right">
                <form method="get" action="/addDevice">
                    <!--onclick="addDeviceWindow()"-->
                    <button type="submit"  class="header_button">Neues
                        Gerät hinzufügen
                        <svg width="1em" height="1em" viewBox="0 0 16 16"
                             class='fas fa-pencil'
                             fill="currentColor"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M11 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM1.022 13h9.956a.274.274 0 0 0 .014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 0 0 .022.004zm9.974.056v-.002.002zM6 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0zm4.5 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"/>
                            <path fill-rule="evenodd"
                                  d="M13 7.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z"/>
                        </svg>
                    </button>
                </form>
            </div>
            <table id="userlist" width="100%" class="table user-list" onload>
                <thead>
                <tr>
                    <th>Inventarnummer</th>
                    <th>Kategorie</th>
                    <th>Produktbezeichnung</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody id="deviceContent">
                <% for (var i = 0;i < data.length;i++){ %>
                    <tr onclick="loadData(<%= i %>);">

                        <td id="tr<%= i %>td1"><%= data[i].inventoryNumber %></td>
                        <td id="tr<%= i %>td2"><%= data[i].category %></td>
                        <td id="tr<%= i %>td3"><%= data[i].model %></td>
                        <td id="tr<%= i %>td4"><%= data[i].deviceStatus %></td>

                    </tr>
                <% } %>
                </tbody>
            </table>

        </div>
        <div>
            <form class="box" action="/updateDevice" method="post"
                  id="changeDevice">
                <h3>Geräteinformationen</h3>
                <br>
                <div class="box1">

                    <div class="deviceInfoBoxes" style="width: 350px">
                        <label for="inventarnummer" style="float: left">
                            Inventarnummer: </label>
                        <div>
                            <input class="form-control" form="changeDevice"
                                   type="text" value="Inventarnummer"
                                   id="invnumber" name="inventoryNumber">
                            <input type="hidden" name="inventoryNumber"
                                   form="booking" id="hiddeninvnumberbooking"
                                   value="Inventarnummer">
                            <input type="hidden" name="inventoryNumber"
                                   value="Inventarnummer"
                                   form="historie" id="hiddeninvnumberhistory">
                        </div>
                    </div>

                    <div class="deviceInfoBoxes">
                        <label for="category"> Kategorie: </label>
                        <div>
                            <select class="browser-default custom-select form-control"
                                    id="category"
                                    onchange="getSelectedOption()"
                                    style="width: 100%; display: inline-block" name="beaconMajor">
                                <option selected disabled>Kategorie</option>
                                <option value="0001">Rüttelplatte</option>
                                <option value="0002">Stampfer</option>
                                <option value="0003">Motorflex</option>
                                <option value="0004">Rohrgreifer</option>
                                <option value="0005">Kettensäge</option>
                                <option value="0006">Motorhammer</option>
                                <option value="0007">Leiter</option>
                                <option value="0008">Exoten</option>
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="deviceInfoBoxes">
                        <label>Produktbezeichnung</label>
                        <div>
                            <label for="produktbezeichnung">Produktbezeichnung</label>
                            <input type="text" class="form-control"
                                   name="produktbezichnung"
                                   placeholder="Produktbezeichnung" id="produktbezeichnung">
                        </div>
                    </div>

                    <div class="deviceInfoBoxes">
                        <label for="status"> Status:</label>
                        <div>
                            <select class="browser-default custom-select form-control"
                                    id="sort" onchange="getSelectedOption()"
                                    style="width: 100%; display:
                                    inline-block" name="deviceStatus">
                                <option selected disabled>Status</option>
                                <option value="1">Verfügbar</option>
                                <option value="2">Ausgeliehen</option>
                                <option value="3">In Wartung</option>
                                <option value="4">Außer Betrieb</option>
                                <option value="5">Defekt</option>
                                <option value="6">Verschollen/Verschwunden</option>
                                <option value="7">Gestohlen</option>
                            </select>


                        </div>
                    </div>

                    <div class="deviceInfoBoxes">
                        <label for="technicalInspection"
                               style="float: left">TÜV</label>
                        <div>
                            <input type="datetime-local" class="form-control">
                        </div>
                    </div>

                    <div class="deviceInfoBoxes">
                        <label for="technicalInspection"
                               style="float: left">UVV</label>
                        <div>
                            <input type="datetime-local" class="form-control">
                        </div>
                    </div>

                    <div class="deviceInfoBoxes" style="width: 350px">
                        <label>Position</label>

                        <div>
                            <div style="float: left;">

                                <input id="xAxis" class="form-control"
                                       type="text" value="52.52"
                                       style="width: 170px">
                            </div>
                            <div style="float: right">

                                <input id="yAxis" class="form-control"
                                       type="text" value="7.32"
                                       style="width: 170px">
                            </div>
                        </div>
                    </div>


                    <div style="margin-top: 1em">
                        <p>
                            <button type="submit"
                                    class="btn btn-outline-primary"
                                    onclick="sendData()">
                                Daten ändern
                            </button>
            </form>
            <form method="post" action="/historie" id="historie">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <button type="submit" class="btn btn-info">Historie
                                anzeigen
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            <form method="post" action="/booking" id="booking">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning">Gerät
                                reservieren
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <br>
        <hr>
        <h4>Standort</h4>
        <br>
        <div id="map" style="width: 700px; height: 500px">
            <div></div>
        </div>

    </div>
    </form>
</div>
</div>
</div>


<%- include('../Views/general/footer.ejs'); -%>
</body>
<style>
   /* td:nth-of-type(5) {
        display: none;
    }*/

    .deviceInfoBoxes {
        width: 350px;
    }

</style>
<script>

    var map = L.map('map').setView([52.52, 7, 32], 5);
    L.tileLayer('https://{s}.tile.osm.org/{z}/{x}/{y}.png', {
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',

    }).addTo(map);
    var markerElement = L.marker([52.52, 7, 32]).addTo(map);
    var marker2 = L.marker([52, 7, 32]).addTo(map);
</script>
</html>