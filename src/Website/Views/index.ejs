<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Willkommen zurück <%= benutzername %></title>
    <link rel="stylesheet" type="text/css" href="css/startseite.css">
    <link rel="stylesheet" type="text/css" href="css/headFootDesign.css">
    <link rel="stylesheet" type="text/css" href="css/table.css">
    <link rel="icon" type="image/x-icon" href="https://www.dallmann-bau.de/fileadmin/template/favicon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <script src="javascript/index.js"></script>

</head>
<body>
<% /* NavigationBar & Footer Import*/  %>
<%- include('../Views/header.ejs'); -%>


<% /* NavigationBar & Footer Import */ %>
<div id="main">
</div>
    <div id="overview">
        <div id="showDevices">
            <a href="/devices" style="text-decoration: none; color: #0d0d0d">
                <h3>Geräte anzeigen</h3>
                <p>&nbsp;</p>
                <i class="fas fa-briefcase fa-3x"></i>
                <p>&nbsp;</p>
            </a>
        </div>
    </div>

    <% /* access for users with role 1 to 3 */%>
    <% if (rights[0] ===1 ) { %>
    <div id="overview">
        <div id="reservations">
            <a href="/bookinglist" style="text-decoration: none; color: #0d0d0d">
                <h3>Reservieren</h3>
                <p>&nbsp;</p>
                <i class="fas fa-calendar-alt fa-3x"></i>
                <p>&nbsp;</p>
            </a>
        </div>
    </div>
    <% } %>

    <div id="overview">
        <div id="userProfil">
            <a href="/profil" style="text-decoration: none; color: #0d0d0d">
                <h3>Benutzerprofil</h3>
                <p>&nbsp;</p>
                <i class="fas fa-user fa-3x"></i>
                <p>&nbsp;</p>
            </a>
        </div>
    </div>
    <% /* access for users with role 1 & 2 */%>
    <% if ( role === 1 || role === 2 ) { %>
    <div id="overview">
        <div id="picking">
            <a href="/picking" style="text-decoration: none; color: #0d0d0d">
                <h3>Komissionieren</h3>
                <p>&nbsp;</p>
                <i class="fas fa-list fa-3x"></i>
                <p>&nbsp;</p>
            </a>
        </div>
    </div>
    <% } %>

    <div id="overview">
        <div id="search">
            <a href="/search" style="text-decoration: none; color: #0d0d0d">
                <h3>Suchen</h3>
                <p>&nbsp;</p>
                <i class="fas fa-search fa-3x"></i>
                <p>&nbsp;</p>
            </a>
        </div>
    </div>

    <% /* access for users with role 1 */%>
    <% if (rights[5]=== 1 && rights[6] === 1){%>
    <div id="overview">
        <div id="userManagement">
            <a href="/update" style="text-decoration: none; color: #0d0d0d">
                <h3>Nutzerverwaltung</h3>
                <p>&nbsp;</p>
                <i class="fas fa-cogs fa-3x"></i>
                <p>&nbsp;</p>
            </a>
        </div>
    </div>
    <% } %>
</div>

<footer>
    <div id="wert1" class="zweiwerte">
        <p id="footer-caption">Softwareentwicklungsprojekt 2020</p>
    </div>
    <div id="wert2" class="zweiwerte">
        <p id="footer-infos"><a href="/">Support </a>|<a href="/"> Lizenz</a>  </p>
    </div>
</footer>

</body>
</html>

